<script>
    $(document).ready(function () {
        $("span[id^='index-']").each(function() {
            $(this).click(function() {
                $('.index *').removeClass('active');
                $(this).addClass('active');
            })
        });
        $('input[type="checkbox"]').click(function() {
            if (this.checked) {
                $('.compare_page #valider').removeAttr("disabled");
                $('.compare_page #valider').removeClass('disabled');
            }
            else {
                $('.compare_page #valider').attr("disabled","disabled");
                $('.compare_page #valider').addClass('disabled');
            }
        });
    })
</script>

